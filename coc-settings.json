{
  "prettier.tslintIntegration": true,
  "prettier.eslintIntegration": false,
  "coc.preferences.formatOnSaveFiletypes": [
    "html",
    "css",
    "scss",
    "py",
    "js",
    "php",
    "jsx"
  ],

  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cc", "cpp", "c++", "objc", "objcpp"],
      "rootPatterns": [".ccls", "compile_commands.json", ".git/", ".hg/"],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        }
      }
    }
  }
}
